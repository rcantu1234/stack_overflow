<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>Keyword:</strong>
  <%= @question.keyword %>
</p>


<div class='answers'>
  <h3>Answer</h3>
  <ul>
  <%= @question.answers.each do |answer| %>
    <p> <li><%= link_to(question.title, answer) %> | <%= 'completed' if answer.completed %></li> </p>
  <% end %>
  </ul>
</div>

<div class='new-answer col-md-6'>
  <h4>New Answer</h4>
  <%= render partial: 'answers/form' %>
</div>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
